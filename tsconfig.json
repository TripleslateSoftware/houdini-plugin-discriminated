{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "esnext",
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "types": ["node"],
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "paths": {
      "houdini-plugin-discriminated": ["./src/public.d.ts"],
      "houdini-plugin-discriminated/runtime": ["./src/runtime/public.d.ts"]
    }
  },
  "include": ["./src"]
}
